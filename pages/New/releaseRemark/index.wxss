/* pages/New/Teachers/index.wxss */

.header {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.scoure {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.scoure-box {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  position: relative;
}

.scoure-box image {
  width: 100%;
  height: 100%;
}

.scoure-img {
  position: absolute;
  top: 0;
  left: 0;
}

.texteare {
  width: 100%;
  height: 346rpx;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.fot-box{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.fot-box>button{
  width: 100%;
}
.tag-box{
  margin: auto;
  display: flex;
  flex-wrap: wrap;
  padding-top: 10rpx;
}
.tag-list{
  width: 48%;
  height: 64rpx;
  border-radius: 64rpx;
  background: #ffffff;
  font-size: 28rpx;
  line-height: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
  border: #e0e0e0;
  margin-top: 20rpx;
}
.tag-list-select{
  color:#ffffff;
  background: #7c99d0;
}
.tag-box>.tag-list:nth-child(even){
  margin-left: 4%;
}